{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<div class="container">
    <h1>Cart</h1>
    <table class="table table-bordered">
        <tr>
            <th>Service Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Action</th>
        </tr>
        {% for item in items %}
            <tr>
                <td>{{item.service.name}}</td>
                <td>{{item.service.price}}</td>
                <td>{{item.qte}}</td>
                <td>{{item.service.price * item.qte}}</td>
                <td>
                    <a href="{{ path('app_cart_service_remove',{'id':item.service.id}) }}" class="text-danger text-decoration-none">Delete to cart</a>
                </td>
            </tr>
            {% else %}
                <p>Your cart is empty</p>
        {% endfor %}
    </table>
    {% if total > 0 %}
         <h2>Total: {{total}} EUR</h2>
         <div class="row">
            <a data-turbo="false" href="{{ path('app_order') }}" class="btn btn-primary col-2 m-lg-1">Validate the order</a>
            <a  href="{{ path('app_cart_remove') }}" class="btn btn-outline-danger col-2 m-lg-1">Delete cart</a>
        </div>
    {% endif %}
</div>
{% endblock %}
