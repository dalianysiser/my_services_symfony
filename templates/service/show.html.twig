{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
<div class="container">
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ service.price }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <a href="{{ path('app_service_index') }}">back to list</a>
    <br>
    <a class= "btn btn-outline-primary" href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
    <br><br>
    {{ include('service/_delete_form.html.twig') }}
</div>
{% endblock %}
